<h1>User/idのページ</h1>

<h1>User info</h1>
<div class="profile-container">
    <h3 class="profile-name">name:<%= @user.name %></h3>
    <h3 class="profile-name">introduction:<%= @user.introduction %></h3>

    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>
</div>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %><br>

    <%= f.submit 'Create book' %>

<% end %>

<h1>自分の投稿一覧</h1>

<% @books.each do |f| %>
  <%= attachment_image_tag f.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <!-- .userは「モデル名（小文字）でデータを参照できる,：データを指定」-->
  <%= link_to f.title, book_path(f.id) %>
  <%= f.body %><br>
<% end %>

